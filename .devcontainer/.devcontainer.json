{
    "build": { "dockerfile": "Dockerfile" },
    "overrideCommand": false,
    "remoteUser": "vscode",
    "postCreateCommand": "git config --global --add safe.directory '*'",
    "customizations": {
        "vscode": {
            "extensions": [
                "GitHub.copilot",
                "GitHub.vscode-pull-request-github",
                "GitHub.vscode-github-actions",
                "ms-azuretools.vscode-docker",
                "medo64.render-crlf"
            ]
        }
    }
}